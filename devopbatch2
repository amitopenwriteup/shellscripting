#shell script
vi test.sh

#!/bin/bash
read -p "provide package name:" PKG
dpkg -s $PKG > /dev/null 2>&1
if [ $? -eq 0 ];then
  echo "package '$PKG' is alreday installed"
else
  echo "pacakge is note installed"
fi

#save the script
chmod 744 test.sh
./test.sh

linux booting process

https://www.freecodecamp.org/news/the-linux-booting-process-6-steps-described-in-detail/

#Assignment: now you need to find the command , if package is not installed, is the pacakge is a valid package or not, which command we can use in ubuntu??

apt-cache policy <package-name>

vi test.sh

#!/bin/bash
# Ask user for package name
read -p "Enter package name: " PKG
# Check if package is already installed
if dpkg -s "$PKG" &> /dev/null; then
    echo "Package '$PKG' is already installed."
    exit 0
fi
echo "Package '$PKG' is not installed."
# Check if package exists in repository
if apt-cache show "$PKG" &> /dev/null; then
    echo "Package '$PKG' is available. Installing..."
    sudo apt update
    sudo apt install -y "$PKG"
    if [ $? -eq 0 ]; then
        echo " Package '$PKG' installed successfully."
    else
        echo " Failed to install package '$PKG'."
    fi
else
    echo "Package '$PKG' does not exist in repositories."
fi


